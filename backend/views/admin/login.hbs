<div class="container" style="margin: 15px 10px;">
  <div class="row">
    <form action="/admin/login" method="post">
      <div class="mb-3 row">
        <div class="col-sm-10">
          <input type="text" class="form-control" id="inputUser" placeholder="Ingresa tu usuario" name="usuario">
        </div>
      </div>
      <div class="mb-3 row">
        <div class="col-sm-10">
          <input type="password" class="form-control" id="inputPassword" placeholder="Ingresa la contraseña" name="password">
        </div>
      </div>
      <button type="submit" class="btn btn-primary">Enviar</button>
    </form>
    {{#if error}}
      <p class="text-danger">Usuario y/o contraseña incorrectos.</p>
    {{/if}}
  </div>
</div>
